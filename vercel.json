{
    "version": 2,
    "builds": [
      {
        "src": "api/chat.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "100mb" }
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      { "src": "/api/chat", "dest": "/api/chat.py" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }